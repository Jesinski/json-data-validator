{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "../dist/",
    "rootDirs": ["src", "tests"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["../src/**/*.ts", "../tests/**/*.ts"],
  "exclude": ["node_modules", "../src/**/*.ts"]
}
